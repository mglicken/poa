
<div class="page-header">
  <h1>
    Customers
    <a href="/customers/new" class="btn btn-lg btn-success"><i class="fa fa-plus"></i></a>
  </h1>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search Customers (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @customers.each do |customer| %>
  <div class="col-lg-4 isotope-item">
    <div class="ibox-content">
        <h3 class="ibox-title">Customer #<%= customer.id %></h3>
      <div class="ibox-body">
        <div class="row">
          <div class="col-lg-12">
            <dl class="dl-horizontal">

              <dt>Property Name:</dt>
              <dd> <%= customer.property_name %></dd>
              <dt>Occupancy:</dt>
              <dd> <%= customer.occupancy_id %></dd>
              <dt>Address:</dt>
              <dd> <address>

                  <%= customer.address_1 %><br>
                  <%= customer.address_2 %><br>
                  <%= customer.city %>, <%= customer.state %> <%= customer.zip %>     
                  </address>                                  
              </dd>

           </dl>
            <div class="btn-group btn-group-justified">
              <a href="/customers/<%= customer.id %>" class="btn btn-primary">
                <i class="fa fa-search-plus"></i>
              </a>

              <a href="/customers/<%= customer.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_customer/<%= customer.id %>" class="btn btn-danger">
                <i class="fa fa-trash"></i>
              </a>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<%= render('shared/quick_search_js') %>